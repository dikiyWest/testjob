<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="testjob">
        <createTable tableName="ACCOUNT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ACCOUNT"/>
            </column>
            <column name="DTYPE" type="VARCHAR(31)"/>
            <column name="PHOTO" type="VARCHAR(1024)"/>
            <column name="FIRST_NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="MIDDLE_NAME" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="testjob">
        <createIndex indexName="IDX_CONTACTS_ACCOUNT" tableName="CONTACTS">
            <column name="ACCOUNT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="ACCOUNT_ID" baseTableName="CONTACTS"
                                 constraintName="FK_CONTACTS_ON_ACCOUNT" onDelete="CASCADE" referencedColumnNames="ID"
                                 referencedTableName="ACCOUNT"/>
    </changeSet>
</databaseChangeLog>