<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="testjob">
        <createTable tableName="CONTACTS">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CONTACTS"/>
            </column>
            <column name="TYPE_CONTACT" type="VARCHAR(255)"/>
            <column name="VALUE_" type="VARCHAR(255)"/>
            <column name="ACCOUNT_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="testjob">
        <createIndex indexName="IDX_CONTACTS_ACCOUNT" tableName="CONTACTS">
            <column name="ACCOUNT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="ACCOUNT_ID" baseTableName="CONTACTS"
                                 constraintName="FK_CONTACTS_ON_ACCOUNT" onDelete="CASCADE" referencedColumnNames="ID"
                                 referencedTableName="ACCOUNT"/>
    </changeSet>
    <changeSet id="3" author="testjob">
        <dropForeignKeyConstraint baseTableName="contact" constraintName="fk_contact_on_account"/>
    </changeSet>
    <changeSet id="4" author="testjob">
        <dropTable cascadeConstraints="true" tableName="contact"/>
    </changeSet>
</databaseChangeLog>